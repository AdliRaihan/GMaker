<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:id="@+id/HolderDetailPeek"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_marginLeft="31dp"
        android:orientation="vertical"
        android:gravity="right"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/closebtn_peek"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:src="@drawable/ic_close_white_24dp" />
    <LinearLayout
        android:orientation="vertical"
        android:gravity="right"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/colorPrimaryDark_Opacity2"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorAccent_2"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="25dp">
            <TextView
                android:id="@+id/dleftdetails_peek"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sudah berhakhir 1 tahun yang lalu" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginVertical="10dp"
                android:background="@color/colorPrimaryDark_Opacity2" />

            <TextView
                android:id="@+id/datedetails_peek"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="28 SEPTEMBER 2018" />

            <TextView
                android:id="@+id/descdetails_peek"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginVertical="10dp"
                android:text="28 SEPTEMBER 2018" />

            <TextView
                android:id="@+id/deleteagendaparent_peek"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/edittext_primary_drwbl_create"
                android:padding="10dp"
                android:text="Batalkan Agenda"
                android:textAlignment="center" />
        </LinearLayout>

    </LinearLayout>
    </RelativeLayout>
</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".adapter.DetailsActivity">


    <ScrollView
        android:foregroundGravity="top"
        android:layout_gravity="top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="200dp">
                <ImageView
                    android:scaleType="centerCrop"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@mipmap/osmanrana"/>
                <ImageView
                    android:background="@color/colorPrimaryDark_Opacity1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
                <!-- CONTENT -->
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <LinearLayout
                        android:background="@color/colorPrimaryDark_Opacity1"
                        android:padding="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="40dp">
                        <ImageView
                            android:id="@+id/backdetails"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_arrow_back_white_24dp"/>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/editholdbtn"
                        android:padding="10dp"
                        android:orientation="vertical"
                        android:gravity="center|left"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/detail_label_header"
                            android:textColor="@color/colorAccent_2"/>
                        <TextView
                            android:id="@+id/titledetails"
                            android:textColor="@color/colorAccent_2"
                            android:textSize="28dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Arduino"/>
                        <TextView
                            android:id="@+id/datedetails"
                            android:textColor="@color/colorAccent_3"
                            android:text="02:00 PM"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                    </LinearLayout>
                </LinearLayout>
            </RelativeLayout>
            <LinearLayout
                android:orientation="vertical"
                android:id="@+id/nothing_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/dleftdetails"
                    android:textColor="@color/colorAccent_2"
                    android:background="@color/colorPrimaryDark_Opacity2"
                    android:layout_width="match_parent"
                    android:gravity="center"
                    android:layout_height="30dp"
                    android:text="@string/detail_label_appointment"/>
            </LinearLayout>
            <LinearLayout
                android:padding="10dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <LinearLayout
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_description_black_24dp"/>
                    <TextView
                        android:layout_marginHorizontal="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/detail_label_description"/>
                </LinearLayout>
                <ImageView
                    android:layout_margin="10dp"
                    android:layout_gravity="center"
                    android:layout_width="350dp"
                    android:layout_height="0.5dp"
                    android:background="@color/colorPrimaryDark_Opacity1"/>
                <TextView
                    android:textAlignment="center"
                    android:text="@string/lorem_ipsum_xl"
                    android:id="@+id/descdetails"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
            </LinearLayout>
            </LinearLayout>
    </ScrollView>
</LinearLayout>
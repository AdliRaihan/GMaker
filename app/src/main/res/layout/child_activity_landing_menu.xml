<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    android:id="@+id/viewMenu"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/colorPrimaryDark_Opacity1"
    android:layout_gravity="right"
    android:layout_height="match_parent">
    <LinearLayout
        android:orientation="vertical"
        android:layout_gravity="right"
        android:layout_width="300dp"
        android:background="@color/colorAccent_2"
        android:layout_height="match_parent">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp">
            <ImageView
                android:scaleType="centerCrop"
                android:src="@mipmap/neil_bg_failed"
                android:background="@color/colorPrimaryDark"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
                <LinearLayout
                    android:orientation="horizontal"
                    android:background="@color/colorPrimaryDark_Opacity1"
                    android:layout_width="match_parent"
                    android:gravity="right|center"
                    android:layout_height="match_parent">
                    <TextView
                        android:gravity="center"
                        android:textSize="20dp"
                        android:paddingHorizontal="20dp"
                        android:textColor="@color/colorAccent_2"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="@string/drawer_menu_header"/>
                    <LinearLayout
                        android:gravity="right|center"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:id="@+id/close_drawer_btn"
                            android:paddingHorizontal="20dp"
                            android:fontFamily="@font/segoeui"
                            android:layout_width="wrap_content"
                            android:src="@drawable/ic_close_white_24dp"
                            android:textColor="@color/colorAccent_2"
                            android:layout_height="wrap_content" />
                    </LinearLayout>
                </LinearLayout>
        </RelativeLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <!-- menu Start 1 Category -->
                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <LinearLayout
                            android:padding="10dp"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">
                            <TextView
                                android:textColor="@color/colorPrimaryDark_Opacity2"
                                android:gravity="center"
                                android:layout_marginLeft="10dp"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:text="@string/drawer_menu_sub_label_1"/>
                        </LinearLayout>
                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="0.25dp"
                            android:background="@color/colorPrimaryDark_Opacity2"/>
                    </LinearLayout>
                    <!-- menu start -->
                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <LinearLayout
                            android:id="@+id/create_gendabtn"
                            android:padding="10dp"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">
                            <ImageView
                                android:background="@drawable/ic_add_box_purple_24dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />
                            <TextView
                                android:gravity="center"
                                android:layout_marginLeft="10dp"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:text="@string/drawer_menu_add"/>
                        </LinearLayout>
                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="0.25dp"
                            android:background="@color/colorPrimaryDark_Opacity2"/>
                    </LinearLayout>

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <LinearLayout
                            android:id="@+id/create_gendabtndaily"
                            android:padding="10dp"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">
                            <ImageView
                                android:background="@drawable/ic_add_gray_nosolid_24dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />
                            <TextView
                                android:gravity="center"
                                android:layout_marginLeft="10dp"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:text="@string/drawer_menu_addDaily"/>
                        </LinearLayout>
                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="0.25dp"
                            android:background="@color/colorPrimaryDark_Opacity2"/>
                    </LinearLayout>
                    <!-- menu start -->
                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <LinearLayout
                            android:padding="10dp"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">
                            <ImageView
                                android:background="@drawable/ic_done_all_blue_24dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />
                            <TextView
                                android:gravity="center"
                                android:layout_marginLeft="10dp"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:text="@string/drawer_menu_done_all"/>
                        </LinearLayout>
                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="0.25dp"
                            android:background="@color/colorPrimaryDark_Opacity2"/>
                    </LinearLayout>
                    <!-- menu start -->
                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <LinearLayout
                            android:padding="10dp"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">
                            <ImageView
                                android:background="@drawable/ic_delete_red_24dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />
                            <TextView
                                android:gravity="center"
                                android:layout_marginLeft="10dp"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:text="@string/drawer_menu_delete"/>
                        </LinearLayout>
                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="0.25dp"
                            android:background="@color/colorPrimaryDark_Opacity2"/>
                    </LinearLayout>

                    <!-- menu start 2 Category -->
                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <LinearLayout
                            android:padding="10dp"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">
                            <TextView
                                android:gravity="center"
                                android:textColor="@color/colorPrimaryDark_Opacity2"
                                android:layout_marginLeft="10dp"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:text="@string/drawer_menu_sub_label_3"/>
                        </LinearLayout>
                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="0.25dp"
                            android:background="@color/colorPrimaryDark_Opacity2"/>
                    </LinearLayout>
                    <!-- menu start -->
                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <LinearLayout
                            android:id="@+id/account_gendabtn"
                            android:padding="10dp"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">
                            <ImageView
                                android:src="@drawable/ic_account_circle_green_24dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />
                            <TextView
                                android:gravity="center"
                                android:layout_marginLeft="10dp"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:text="@string/drawer_menu_account_info"/>
                        </LinearLayout>
                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="0.25dp"
                            android:background="@color/colorPrimaryDark_Opacity2"/>
                    </LinearLayout>  <!-- menu start -->
                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <LinearLayout
                            android:padding="10dp"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">
                            <ImageView
                                android:src="@drawable/ic_settings_gray_24dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />
                            <TextView
                                android:gravity="center"
                                android:layout_marginLeft="10dp"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:text="@string/drawer_menu_account_setting"/>
                        </LinearLayout>
                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="0.25dp"
                            android:background="@color/colorPrimaryDark_Opacity2"/>
                    </LinearLayout>  <!-- menu start -->
                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <LinearLayout
                            android:id="@+id/logout_gendabtn"
                            android:padding="10dp"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">
                            <ImageView
                                android:src="@drawable/ic_exit_to_app_red_24dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />
                            <TextView
                                android:gravity="center"
                                android:layout_marginLeft="10dp"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:text="@string/drawer_menu_account_sign_out"/>
                        </LinearLayout>
                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="0.25dp"
                            android:background="@color/colorPrimaryDark_Opacity2"/>
                    </LinearLayout>

                    <!-- menu start 2 Category -->
                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <LinearLayout
                            android:padding="10dp"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">
                            <TextView
                                android:gravity="center"
                                android:textColor="@color/colorPrimaryDark_Opacity2"
                                android:layout_marginLeft="10dp"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:text="@string/drawer_menu_sub_label_2"/>
                        </LinearLayout>
                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="0.25dp"
                            android:background="@color/colorPrimaryDark_Opacity2"/>
                    </LinearLayout>
                    <!-- menu start -->
                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <LinearLayout
                            android:padding="10dp"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">
                            <ImageView
                                android:src="@drawable/ic_attach_money_black_24dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />
                            <TextView
                                android:gravity="center"
                                android:layout_marginLeft="10dp"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:text="@string/drawer_menu_premium"/>
                        </LinearLayout>
                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="0.25dp"
                            android:background="@color/colorPrimaryDark_Opacity2"/>
                    </LinearLayout>



                </LinearLayout>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</LinearLayout>
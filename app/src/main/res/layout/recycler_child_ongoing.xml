<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="175dp"
    android:background="@color/colorPrimaryDark_Opacity2">
    <LinearLayout
        android:id="@+id/ongoingHolder"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="vertical"
            android:padding="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textColor="@color/colorAccent_2"
                android:id="@+id/titleongoing"
                android:fontFamily="@font/segoeui"
                android:textSize="24dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="The Title"/>
            <TextView
                android:id="@+id/dateongoing"
                android:textColor="@color/colorAccent_3"
                android:textSize="14dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="on going"/>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <EditText
                    android:enabled="false"
                    android:background="@android:color/transparent"
                    android:paddingVertical="10dp"
                    android:textSize="14dp"
                    android:textAlignment="textStart"
                    android:text="@string/lorem_ipsum_xl"
                    android:id="@+id/descongoing"
                    android:maxLength="25"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <EditText
                    android:enabled="false"
                    android:background="@android:color/transparent"
                    android:paddingVertical="10dp"
                    android:textSize="14dp"
                    android:textAlignment="textStart"
                    android:text=" . . . . . . ."
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>
            <TextView
                android:textColor="@color/colorAccent_3"
                android:textAlignment="center"
                android:padding="10dp"
                android:id="@+id/attendBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Mark as Attend"/>
        </LinearLayout>
    </LinearLayout>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorPrimaryDark"/>
</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/GodFatherLandingUserLayout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:layout_gravity="center">
    <ScrollView
        android:scrollX="0dp"
        android:scrollY="0dp"
        android:id="@+id/ScrollBarLandingUserLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="500dp"
                    android:background="@drawable/bg"/>
                <LinearLayout
                    android:focusedByDefault="true"
                    android:orientation="vertical"
                    android:background="@color/colorPrimaryDark_Opacity1"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:id="@+id/landingHeader_top">
                    <LinearLayout
                        android:gravity="center|top"
                        android:paddingHorizontal="20dp"
                        android:paddingVertical="10dp"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/scriptuitbl"
                            android:text="@string/login_welcome_label"
                            android:textSize="28dp"
                            android:textColor="@android:color/white"
                            />
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Selamat pagi , Adli Raihan !"
                            android:gravity="right"
                            android:textColor="@color/colorAccent"/>
                    </LinearLayout>
                    <ImageView
                        android:layout_marginHorizontal= "20dp"
                        android:padding="20dp"
                        android:layout_width="75dp"
                        android:layout_height="1dp"
                        android:background="@color/colorAccent"/>
                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/segoeui"
                            android:text="@string/landing_activity_agenda_label_1"
                            android:textSize="18dp"
                            android:textColor="@color/colorDawnBlue"
                            android:paddingHorizontal="20dp"/>
                        <TextView
                            android:id="@+id/agenda_current"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/segoeui"
                            android:text="Masuk Kuliah Jam 7.00 AM"
                            android:textSize="18dp"
                            android:textColor="@color/colorDawnBlue"
                            android:paddingHorizontal="20dp"/>
                    </LinearLayout>


                    <LinearLayout
                        android:padding="20dp"
                        android:gravity="left|center"
                        android:layout_gravity="bottom"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/landing_activity_agenda_label_2"
                            android:fontFamily="@font/segoeui"
                            android:textColor="@android:color/white"
                            android:textSize="18dp"/>
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/landingBody"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/landingHeader_top"
                    android:layout_alignParentStart="true"
                    android:background="@android:color/white"
                    android:orientation="vertical">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:minHeight="800dp">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:gravity="center|left">
                            <android.support.v7.widget.RecyclerView
                                android:id="@+id/RecyclerMe"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">
                            </android.support.v7.widget.RecyclerView>
                        </LinearLayout>
                    </RelativeLayout>
                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
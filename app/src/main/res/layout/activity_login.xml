<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center|bottom"
        android:layout_gravity="center"
        android:foregroundGravity="center"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_gravity="center">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="0dp"
                android:layout_marginTop="0dp"
                android:contentDescription="Background" />
            <LinearLayout
                android:id="@+id/Header_Login"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="0dp"
                android:gravity="center"
                android:foregroundGravity="center"
                android:orientation="vertical"
                android:padding="25dp">

                <ScrollView
                    android:layout_gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical" >

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:padding="25dp">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/seguisb"
                                android:text="@string/login_label_info_header"
                                android:paddingVertical="0dp"
                                android:textColor="@color/colorPrimaryDark_Opacity2"
                                android:textSize="32dp"/>
                            <ImageView
                                android:layout_marginVertical="10dp"
                                android:layout_width="match_parent"
                                android:layout_height="0.25dp"
                                android:background="@color/colorPrimaryDark_Opacity2"/>
                            <TextView
                                android:padding="10dp"
                                android:textAlignment="center"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/login_label_info"
                                android:paddingHorizontal="25dp"
                                android:textColor="@color/colorPrimaryDark_Opacity1"
                                android:textSize="10dp"/>

                            <LinearLayout
                                android:orientation="vertical"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:paddingVertical="2dp"
                                android:gravity="center">
                                <EditText
                                    android:id="@+id/username_Input"
                                    android:maxLength="12"
                                    android:textSize="14dp"
                                    android:paddingHorizontal="20dp"
                                    android:paddingVertical="10dp"
                                    android:hint="@string/hint_daftar_username"
                                    android:background="@drawable/edittext_primary_drwbl"
                                    android:layout_width="match_parent"
                                    android:textColor="@color/colorPrimaryDark"
                                    android:layout_height="wrap_content"
                                    android:layout_marginVertical="5dp"/>
                                <EditText
                                    android:inputType="textPassword"
                                    android:id="@+id/password_Input"
                                    android:maxLength="12"
                                    android:textSize="14dp"
                                    android:paddingHorizontal="20dp"
                                    android:paddingVertical="10dp"
                                    android:hint="@string/hint_daftar_password"
                                    android:background="@drawable/edittext_primary_drwbl"
                                    android:layout_width="match_parent"
                                    android:textColor="@color/colorPrimaryDark"
                                    android:layout_height="wrap_content"
                                    android:layout_marginVertical="5dp"/>
                                <Button
                                    android:id="@+id/loginbtn_intent"
                                    android:layout_width="match_parent"
                                    android:layout_height="40dp"
                                    android:layout_marginTop="10dp"
                                    android:background="@drawable/button_agenda_primary"
                                    android:text="@string/login_label"
                                    android:textColor="@android:color/white"/>
                                <ImageView

                                    android:layout_marginVertical="15dp"
                                    android:layout_width="match_parent"
                                    android:layout_height="0.25dp"
                                    android:background="@color/colorPrimaryDark_Opacity2"/>
                                <TextView
                                    android:id="@+id/daftar_txt_btn"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="10dp"
                                    android:gravity="right"
                                    android:text="@string/login_register_label"
                                    android:textColor="@color/colorPrimaryDark_Opacity2"/>
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>
                </ScrollView>
                    </LinearLayout>
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>
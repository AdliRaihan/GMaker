<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/landingHeader"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:src="@mipmap/neil_bg_failed"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop" />

    <ScrollView
        android:background="@color/landingColor"
        android:id="@+id/scroller_landing"
        android:layout_width="match_parent"
        android:layout_height="2000dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="0dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="100dp">
                <LinearLayout
                    android:background="@drawable/gradient_landingtopbar"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:padding="15dp">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:orientation="vertical">
                        <TextView
                            android:maxLength="17"
                            android:id="@+id/username_logged"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/segoeui"
                            android:text="@string/lorem_ipsum_sm"
                            android:textColor="@color/colorAccent_3"
                            android:textSize="20dp" />
                        <LinearLayout
                            android:orientation="horizontal"
                            android:gravity="center|left"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <ImageView
                                android:layout_marginRight="10dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/ic_moon_1_black_24dp"/>
                            <TextView
                                android:id="@+id/status_info"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/lorem_ipsum_sm"
                                android:textColor="@color/colorAccent_3"
                                android:textSize="8dp" />

                        </LinearLayout>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="right|top">
                        <LinearLayout
                            android:id="@+id/menu_drawer"
                            android:padding="15dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                            <TextView
                                android:background="@drawable/ic_menu_white_24dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </RelativeLayout>
            <RelativeLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_margin="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <LinearLayout
                        android:gravity="center"
                        android:background="@color/colorAccent_3"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="200dp">
                        <LinearLayout
                        android:gravity="center"
                        android:padding="5dp"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/ic_show_chart_black_24dp"/>
                        <TextView
                            android:id="@+id/headerStatistics"
                            android:layout_marginHorizontal="10dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/colorBorder_1"
                            android:text="@string/landing_highlight_header"/>
                    </LinearLayout>

                        <ImageView
                            android:foregroundGravity="center"
                            android:layout_gravity="center"
                            android:layout_marginHorizontal="20dp"
                            android:layout_width="match_parent"
                            android:layout_height="0.5dp"
                            android:background="@color/colorPrimary"/>
                        <LinearLayout
                            android:gravity="center"
                            android:paddingVertical="5dp"
                            android:paddingHorizontal="20dp"
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <TextView
                                android:id="@+id/totalagendacount"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0"
                                android:textSize="18dp"/>
                            <TextView
                                android:id="@+id/totalagendalabel"
                                android:layout_marginHorizontal="10dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/colorBorder_1"
                                android:text="@string/landing_highlight_1"/>
                        </LinearLayout>
                        <LinearLayout
                            android:gravity="center"
                            android:paddingVertical="5dp"
                            android:paddingHorizontal="20dp"
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <TextView
                                android:id="@+id/selesaiagendacount"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0"
                                android:textSize="18dp"/>
                            <TextView
                                android:id="@+id/selesaiagendalabel"
                                android:layout_marginHorizontal="10dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/colorBorder_1"
                                android:text="@string/landing_highlight_2"/>
                        </LinearLayout>
                        <LinearLayout
                            android:gravity="center"
                            android:paddingVertical="5dp"
                            android:paddingHorizontal="20dp"
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <TextView
                                android:id="@+id/later01"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0"
                                android:textSize="18dp"/>
                            <TextView
                                android:id="@+id/laterlabel01"
                                android:layout_marginHorizontal="10dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/colorBorder_1"
                                android:text="@string/landing_highlight_3"/>
                        </LinearLayout>
                        <LinearLayout
                            android:gravity="center"
                            android:paddingVertical="5dp"
                            android:paddingHorizontal="20dp"
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <TextView
                                android:id="@+id/later03"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0"
                                android:textSize="18dp"/>
                            <TextView
                                android:id="@+id/laterlabel03"
                                android:layout_marginHorizontal="10dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/colorBorder_1"
                                android:text="@string/landing_highlight_4"/>
                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:background="@color/colorPrimaryDark_Opacity2"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:background="@color/colorPrimaryDark"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="10dp"
                            android:textColor="@color/colorDawnBlue"
                            android:text="@string/Landing_list_agenda"/>

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="0.5dp"
                            android:background="@color/colorBorder_1"/>
                        <android.support.v7.widget.RecyclerView
                            android:orientation="horizontal"
                            android:id="@+id/bottomRecycler"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>
                        <LinearLayout
                            android:visibility="gone"
                            android:orientation="vertical"
                            android:id="@+id/landing_isnull"
                            android:padding="10dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="top|center">
                            <ImageView
                                android:src="@drawable/ic_favorite_cyan_24dp"
                                android:layout_width="28dp"
                                android:layout_height="28dp" />
                            <TextView
                                android:padding="10dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/colorAccent_3"
                                android:text="@string/landing_activity_ifnull_header"/>
                            <TextView
                                android:textAlignment="center"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textColor="@color/colorAccent_2"
                                android:text="@string/landing_activity_ifnull"/>
                            <TextView
                                android:id="@+id/forceCreateAgenda"
                                android:layout_marginTop="20dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/landing_activity_ifnull_create"
                                android:textColor="@android:color/holo_blue_dark"/>
                        </LinearLayout>
                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="0.10dp"
                            android:background="@color/colorBorder_1"/>
                    </LinearLayout>

                    <LinearLayout
                        android:visibility="gone
"
                        android:id="@+id/ongoingHolder"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <LinearLayout
                            android:background="@color/colorPrimaryDark"
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:padding="10dp"
                                android:textColor="@color/colorDawnBlue"
                                android:text="@string/Landing_list2_agenda"/>
                        </LinearLayout>

                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="175dp">
                           <android.support.v7.widget.RecyclerView
                               android:id="@+id/ongoingRecycler"
                               android:layout_width="match_parent"
                               android:layout_height="wrap_content"/>
                        </LinearLayout>
                    </LinearLayout>
                    <TextView
                        android:fontFamily="@font/segoeuib"
                        android:id="@+id/timerCounter"
                        android:gravity="center"
                        android:padding="20dp"
                        android:textSize="28dp"
                        android:textColor="@color/colorAccent_3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="QUICK MENU"/>
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="0.10dp"
                        android:background="@color/colorBorder_1"/>
                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <LinearLayout
                            android:padding="10dp"
                            android:gravity="center"
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <ImageView
                                android:padding="10dp"
                                android:src="@drawable/ic_add_box_purple_24dp"
                                android:textColor="@color/colorAccent_2"
                                android:text="@string/detail_label_editor"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />
                            <TextView
                                android:id="@+id/quick_create_agenda"
                                android:padding="10dp"
                                android:textColor="@color/colorAccent_2"
                                android:text="@string/drawer_menu_add"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />
                        </LinearLayout>
                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="@color/colorPrimaryDark_Opacity1"/>
                    </LinearLayout>
                </LinearLayout>
            </RelativeLayout>


        </LinearLayout>
    </ScrollView>
</RelativeLayout>
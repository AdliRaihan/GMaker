<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".adapter.DetailsActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="40dp">
        <RelativeLayout
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/backdetails"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_arrow_back_gray_24dp"/>

            <TextView
                android:id="@+id/titledetails"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:text="AGENDA NAMA"
                android:textAlignment="center" />
        </RelativeLayout>
    </LinearLayout>
    <ImageView
        android:background="@color/colorPrimaryDark_Opacity1"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>
    <LinearLayout
        android:background="@color/colorPrimaryDark_Opacity2"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:background="@color/colorAccent_2"
            android:gravity="center"
            android:padding="25dp"
            android:layout_marginHorizontal="25dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/dleftdetails"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sudah berhakhir 1 tahun yang lalu"/>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginVertical="10dp"
                android:background="@color/colorPrimaryDark_Opacity2"/>
            <TextView
                android:id="@+id/datedetails"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="28 SEPTEMBER 2018"/>
            <TextView
                android:layout_marginVertical="10dp"
                android:id="@+id/descdetails"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="28 SEPTEMBER 2018"/>
            <TextView
                android:id="@+id/deleteagendaparent"
                android:background="@drawable/edittext_primary_drwbl_create"
                android:padding="10dp"
                android:textAlignment="center"
                android:text="Delete this agenda."
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>